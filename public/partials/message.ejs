<li class="media">

  <div class="media-body">

    <div class="media">
      <a class="pull-left" href="#">
        <img class="media-object img-circle " src="/img/avatars/<%= message.authorAvatar %>" />
      </a>
      <div class="media-body" >
        <%= message.content %>
        <br />
        <small class="text-muted"><%= message.authorLogin %> | <%= message.timestamp %></small>
        <hr />
      </div>
    </div>

  </div>
</li>
